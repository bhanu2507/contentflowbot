{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url": "https://image.tmdb.org/t/p/w500/fQTZNBNDEQjOZhsP0SQkrnBa3Io.jpg",
      "size": "medium"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "Order Details",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "FactSet",
      "facts": [
          {
              "title": "languages",
              "value": "Hungarian, Slovak"
          },
          {
              "title": "Territories",
              "value": "Austria, Egypt"
          }
      ]
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": true,
      "text": "Please use the buttons below to accept / reject the order",
      "wrap": true,
      "maxLines": 0
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Accept Order",
      "url": "https://docs.microsoft.com/en-us/azure/bot-service/?view=azure-bot-service-4.0"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Cancel Order",
      "url": "https://stackoverflow.com/questions/tagged/botframework"
    }
  ]
}